#dropzone
  width 100%
  height 100px
  text-align center
  border 1px solid #BFBFBF
  background: white
  border: 1px solid #ccc
  margin: 3%

#dropzone {
  color: black;
  background: repeating-linear-gradient(
    45deg,
    transparent,
    transparent 10px,
    #ccc 10px,
    #ccc 20px
  ),
  linear-gradient(
    to bottom,
    #eee,
    #999
  )
}

#dropzone .fa-cloud-upload
  font-size 500%
  margin 10px
